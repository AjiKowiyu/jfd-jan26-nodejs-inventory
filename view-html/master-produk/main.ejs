<%- include('../layout/menu-atas') %>
<%- include('../layout/menu-kiri') %>

<h1>Halaman master produk</h1>
<hr>
<div class="card">
    <div class="card-header">
        <div class="card-title">List Produk</div>
    </div>
    <div class="card-body">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>Kode</th>
                    <th>Nama</th>
                    <th>Deskripsi</th>
                    <th>Foto</th>
                </tr>
            </thead>
            <tbody>
                <% for( let i = 0; i < data_produk.length; i++ ) { %>
                    <tr>
                        <td><%= data_produk[i].kode %></td>
                        <td><%= data_produk[i].nama %></td>
                        <td><%= data_produk[i].deskripsi %></td>
                        <td><%= data_produk[i].foto %></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>


<%- include('../layout/footer') %>